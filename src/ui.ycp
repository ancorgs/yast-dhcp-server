    /**
      * Run main dialog
      * @return symbol for wizard sequencer
      */
    global define symbol runMainDialog () ``{
        list<map> w = CWM::CreateWidgets (["start", "configtree", "optlist"],
	    widgets);
        term contents = `HBox (`HSpacing (2), `VBox (
                `VSpacing (1),
		w[0, "widget"]:`VSpacing (0),
		`VSpacing (1),
		`HBox (
		    w[1, "widget"]:`VSpacing (0),
		    `HSpacing (1),
		    w[2, "widget"]:`VSpacing (0)
		),
                `VSpacing (1)
                ), `HSpacing (2));
        // dialog caption
        string caption = _("DHCP Server Configuration");
        string help = CWM::MergeHelps (w);

        Wizard::SetContentsButtons (caption, contents, help,
            Label::BackButton (), Label::FinishButton ());

        return CWM::Run (w, functions);
    }

