    /**
      * Run wizard sequencer
      * @return `next, `back or `abort
      */
    global define symbol runWizard () ``{

	map aliases = $[
	    "main" : ``(runMainDialog ()),
	    "subnet" : ``(runSubnetDialog ()),
	    "host" : ``(runHostDialog ()),
	    "subnet_select" : ``(runSubnetSelectDialog ()),
	    "host_select" : ``(runHostSelectDialog ()),
	];

	map sequence = $[
	    "ws_start" : "main",
	    "main" : $[
		`next : `next,
		`abort : `abort,
		`subnets : "subnet_select",
		`hosts : "host_select",
	    ],
	    "subnet_select" : $[
		`next : "main",
		`edit : "subnet",
		`abort : `abort
	    ],
	    "host_select" : $[
		`next : "main",
		`edit : "host",
		`abort : `abort,
	    ],
	    "subnet" : $[
		`next : "subnet_select",
		`abort : `abort,
	    ],
	    "host" : $[
		`next : "host_select",
		`abort : `abort,
	    ],
	];

        // run wizard sequencer
        y2milestone ("Starting wizard sequencer");
        return WizardSequencer (aliases, sequence);
    }



