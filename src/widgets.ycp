/**
 * Redraw table of TSIG keys
 */
define void TsigKeysRedraw () ``{
    list items = maplist (map<string,string> k, current_tsig_keys, ``(
        `item (`id (k["key"]:""), k["key"]:"", k["filename"]:"")
    ));
    UI::ChangeWidget (`id (`k_delete), `Enabled, size(items) > 0);
    UI::ChangeWidget (`id (`keys), `Items, items);
