}


/**
 * Initialize the widget
 * @param id any widget id
 */
global define void TsigKeysInit (string id) ``{
    current_tsig_keys = DhcpTsigKeys::ListTSIGKeys ();
    UI::ChangeWidget (`id (`k_new), `Value, "/etc");
    TsigKeysRedraw ();
}

/**
 * Handle function of the widget
 * @param id string widget id
 * @param event map event that caused storing process
 * @return symbol always nil
 */
global define symbol TsigKeysHandle (string id, map event) ``{
    string filename = (string)UI::QueryWidget (`id (`k_new), `Value);
    if (event["ID"]:nil == `k_browse)
    {
        filename = UI::AskForExistingFile (filename, "",
            // popup headline
            _("Select File with Authentication Key"));
        if (filename != nil)
            UI::ChangeWidget (`id (`k_new), `Value, filename);
    }
    else if (event["ID"]:nil == `k_add)
    {
        list<string> keys = DhcpTsigKeys::AnalyzeTSIGKeyFile (filename);
        if (size (keys) == 0)
        {
            // message popup
            Popup::Message (_("The specified file does not contain a TSIG key."));
            return nil;
        }
        boolean collision = false;
        foreach (map<string,string> k, current_tsig_keys, ``{
            if (contains (keys, k["key"]:""))
                collision = true;
        });
        if (collision)
        {
            // yes-no popup
            if (!Popup::YesNo (_("The specified file contains a TSIG key with the same
identifier as some of already present keys.
Old keys will be removed. Continue?
")))
            {
                return nil;
            }
        }
        new_tsig_keys = add (new_tsig_keys, filename);
        foreach (string k, keys, ``{
            current_tsig_keys = filter (map<string,string> key, current_tsig_keys, ``(
                key["key"]:nil != k
            ));
            current_tsig_keys = add (current_tsig_keys, $[
                "key" : k,
                "filename" : filename,
            ]);
        });
	UI::ChangeWidget (`id (`k_new), `Value, "/etc");
    }
    else if (event["ID"]:nil == `k_delete)
    {
        string key = (string)UI::QueryWidget (`id (`keys), `CurrentItem);
        current_tsig_keys = filter (map<string,string>k, current_tsig_keys, ``(
            k["key"]:nil != key
        ));
        deleted_tsig_keys = add (deleted_tsig_keys, key);
    }
    else if (event["ID"]:nil == `k_create)
    {
        UI::OpenDialog (`VBox (
            `HBox (
                // text entry
                `TextEntry (`id (`filename), _("&File Name")),
                `VBox (
                    `Label (" "),
                    `PushButton (`id (`browse), Label::BrowseButton ())
                )
            ),
            // text entry
            `TextEntry (`id (`key_id), _("Key Identifier")),
            `HBox (
                `HStretch (),
                `PushButton (`id (`ok), Label::OKButton ()),
                `PushButton (`id (`cancel), Label::CancelButton ()),
                `HStretch ()
            )
        ));
       symbol ret = nil;
        while (ret == nil)
        {
            ret = (symbol)UI::UserInput ();
            if (ret == `browse)
            {
                string filename = (string)
                    UI::QueryWidget (`id (`filename), `Value);
                filename = (string)UI::AskForSaveFileName (filename, "",
                    // popup headline
                    _("Select File for Creating the Authentication Key"));
                if (filename != nil)
                    UI::ChangeWidget (`id (`filename), `Value, filename);
                ret = nil;
            }
        }
        string filename = (string)UI::QueryWidget (`id (`filename), `Value);
        string key = (string)UI::QueryWidget (`id (`key_id), `Value);
        UI::CloseDialog ();
        if (ret != `ok)
            return nil;
	// yes-no popup
        if (! Popup::YesNo (_("The key will be created now. Continue?")))
            return nil;
	SCR::Execute (.target.bash, sformat (
	    "/usr/bin/genDDNSkey --force  -f %1 -n %2", filename, key));
	UI::ChangeWidget (`id (`k_new), `Value, filename);
	return TsigKeysHandle (id, $["ID" : `k_add]);
    }
    TsigKeysRedraw ();
    return nil;
}

/**
 * Store settings of the widget
 * @param id string widget id
 * @param event map event that caused storing process
 */
global define void TsigKeysStore (string id, map event) ``{
    foreach (string key, deleted_tsig_keys, ``{
        DhcpTsigKeys::DeleteTSIGKey (key);
    });
    foreach (string file, new_tsig_keys, ``{
        DhcpTsigKeys::AddTSIGKey (file);
    });
    DhcpServer::SetModified ();
    return;
}

